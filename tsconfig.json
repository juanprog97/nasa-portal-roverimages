{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/atoms": ["./src/components/atoms/index"],
      "@/molecules": ["./src/components/molecules/index"],
      "@/organisms": ["./src/components/organisms/index"],
      "@/templates": ["./src/components/templates/index"],
      "@/templates/*": ["./src/components/templates/*"],
      "@/adapters": ["./src/adapters/index"],
      "@/context": ["./src/context/index"],
      "@/hooks": ["./src/hooks/index"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/models": ["./src/models/index"],
      "@/pages": ["./src/pages/index"],
      "@/services": ["./src/services/index"],
      "@/utils": ["./src/utils/index"],
      "@/assets/*": ["./src/assets/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src",
    "types/custom-types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
